@model GradStockUp.Models.Establishment

@{
    ViewBag.Title = "Details";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>@Model.EstaName</h2>
<h4>Details</h4>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.StockTypes)  :
        </dt>

        @foreach (var item in Model.StockTypes)
        {
            <dd>

                <div>@item.DESCRIPTION</div>


            </dd>
        }
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Institutions)  :
        </dt>

        @foreach (var item in Model.Institutions)
        {
            <dd>

                <div>@item.InstitutionName</div>


            </dd>
        }
    </dl>

</div>

<div style="padding:2rem">
    <div class="col-md-offset-2">
        <a href="@Url.Action("Edit", "Establishments", new { id = Model.EstablishmentID})" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
    </div>
    <div>
        <a href=" @Url.Action("Index","Establishments")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Establishments </a>
    </div>
</div>

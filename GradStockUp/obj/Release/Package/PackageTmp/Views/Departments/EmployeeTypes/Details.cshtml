@model GradStockUp.Models.EmployeeType

@{
    ViewBag.Title = "Details";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>@Model.DESCRIPTION</h2>
<h4>Details</h4>
<div>
    <dl class="dl-horizontal">
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Employees)
        </dt>


        @foreach (var item in Model.Employees)
        {
            <dd>

                <div>@item.Name @item.Surname</div>


            </dd>
        }
    </dl>
    <hr />
</div>
<p>
    <div class="col-md-offset-2">
        <a href="@Url.Action("Edit", "EmployeeTypes", new { id = Model.EmployeeTypeID})" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
    </div>

    <div>
        <a href=" @Url.Action("Index","EmployeeTypes")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Employee Types </a>
    </div>
</p>
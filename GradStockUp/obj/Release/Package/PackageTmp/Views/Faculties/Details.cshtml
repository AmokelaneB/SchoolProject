@model GradStockUp.Models.Faculty

@{
    ViewBag.Title = "Details";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>@Model.Description</h2>
<h4>Details</h4>
<div>
    <dl class="dl-horizontal">
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Institutions)  :
        </dt>

        @foreach (var item in Model.Institutions)
        {
            <dd>

                <div>@item.InstitutionName</div>


            </dd>
        }

    </dl>
</div>
<div style="padding:2rem">
    <div class="col-md-offset-2">
        <a href="@Url.Action("Edit", "Faculties", new { id = Model.FacultyID})" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
    </div>
    <div>
        <a href=" @Url.Action("Index","Faculties")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Faculties </a>
    </div>
</div>

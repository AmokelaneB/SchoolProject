@model GradStockUp.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Account Verify";
}

<h1 style="color:goldenrod">@ViewBag.Title.</h1>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("provider", @Model.Provider)
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4 style="color: white">Enter verification code sent to your email/UserName</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label", @style="White" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @style="background-color: black; color:white" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color:goldenrod" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

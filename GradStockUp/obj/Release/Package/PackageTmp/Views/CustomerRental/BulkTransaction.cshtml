                            if (data[i].EstaID == $("#Establishment").val()) {
                           
                                s = '<option value ="' + data[i].StckTypeID + '">' + data[i].description + '</option > ';
                                $("#StockTypeList").append(s)
                            }
                        }

                        $("#StockTypeList").attr("Disabled", false);

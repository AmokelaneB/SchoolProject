            });
            $('#step-2-next').click(function () {
                // Check values here
                var count = 0;
                var ScanCount = 0;
                var messag = "";
                var isValid = true;
                $.getJSON('/Scripts/Cart.json', function (res) {
                    if (res == null)
                        messag = "No items in the list ";
                    isValid = false;
                })
                $.getJSON('/Scripts/BulkOrder.json', function (res) {
                    if (res == null) {
                        messag = "Please scan an item";
                        isValid = false;
                    }

                })






                if (isValid) {

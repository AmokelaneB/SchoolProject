                        var trHTML = '';

                        $.each(res, function (i, item) {
                            trHTML = '<tr><td>' + item.StockType + '</td><td>' + item.StockSize + '</td><td>' + item.StockColour + '</td><td>' + item.Quantity + '</td><td>' + parseFloat(item.Price).toFixed(2) + '</td><td>' + parseFloat(item.TotalPrice).toFixed(2) + '</td></tr>';

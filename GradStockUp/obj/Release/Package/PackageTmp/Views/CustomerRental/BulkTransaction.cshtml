                            $("#InstitID").attr("value", data[0].Insitute)
                            $("#FacID").attr("value", data[0].Faculty)
                            $("#StockTypeID").attr("value", data[0].StockType)
                            $("#RentalId").attr("value", parseFloat(data[0].RentalPrice).toFixed(2))
                            $("#SizeID").attr("value", data[0].Size)
                            $("#RetailId").attr("value", parseFloat(data[0].RetailPrice).toFixed(2))

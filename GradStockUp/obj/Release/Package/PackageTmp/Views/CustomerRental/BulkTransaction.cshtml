                        $("#StockTypeList").attr("Disabled", false);
                    }
                });


            });

            $("#StockTypeList").change(function () {
                $.ajax({
                    type: "GET",
                    url: "/CustomerRental/getHeadCircum",
                    data: "{}",
                    success: function (data) {
                        var s = '< option value ="ff" selected>Select Size...  </option > ';
                        $("#SizeList").empty();
                        $("#SizeList").attr("Disabled", false);
                        var StockType = $("#StockTypeList").val();

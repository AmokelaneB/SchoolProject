                    }
                });

            });

            $("#QualType").change(function () {

                $.ajax({
                    type: "GET",
                    url: "/CustomerRental/getStockType",
                    data: "{}",
                    success: function (data) {
                        var s = '< option value ="ff">  </option > ';
                        for (var i = 0; i < data.length; i++) {

                            if (data[i].EstaID == $("#Establishment").val()) {

@model GradStockUp.Models.StockType

@{
    ViewBag.Title = "Details";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>@Model.DESCRIPTION</h2>
<h4>Details</h4>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Sizes)
        </dt>


        @foreach (var item in Model.Sizes)
        {
            <dd>

                <div>@item.SizeDescription</div>

            </dd>
        }
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Establishments)
        </dt>


        @foreach (var item in Model.Establishments)
        {
            <dd>

                <div>@item.EstaName</div>

            </dd>
        }
        <hr />
        <dt>
            @Html.DisplayNameFor(model => model.Prices)
        </dt>


        @foreach (var item in Model.Prices)
        {
            <dd>
                <span>Rental Price</span><div>@item.RentalPrice</div>
            </dd>
            <dd>
                <span>Retail Price</span><div>@item.RetailPrice</div>
            </dd>
        }
    </dl>
    <br />
</div>
<p>
    <div class="col-md-offset-2">
        <a href="@Url.Action("Edit", "StockTypes", new { id = Model.StockTypeID})" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a>
    </div>

    <div>
        <a href=" @Url.Action("Index","StockTypes")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Stock Types </a>
    </div>
</p>

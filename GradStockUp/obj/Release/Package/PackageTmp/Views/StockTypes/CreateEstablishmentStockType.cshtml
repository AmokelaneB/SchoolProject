@model GradStockUp.Models.StockType
@{
    ViewBag.Title = "CreateEstablishmentStockType";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>Stock Type <span class="spans">Establishment Add-On</span></h2>

<hr />

<form action="/StockTypes/CreateEstablishmentStockType" method="post">
    <div>
        @Html.LabelFor(model => model.DESCRIPTION, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("StockTypeID", null, htmlAttributes: new { @class = "form-control" })

    </div>
    <div style="padding-top:1rem">
        @Html.LabelFor(model => model.Establishments, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var establishment in ViewBag.Establishments)
        {
            <ul class="col-md-offset-2">

                <li> <input type="checkbox" name="EstablishmentIDs" value="@establishment.EstablishmentID" />@establishment.EstaName</li>

            </ul>
        }
    </div>
    <hr />
    <div class="col-md-offset-2"><input type="submit" value="Add-On Establishments" /></div>
</form>
<div style="padding: 2rem">
    <div class="row">
        <div class="col-sm-4">
            <a href=" @Url.Action("Index","StockTypes")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Stock Types </a>
        </div>
        <div class="col-md-4">
            <a href=" @Url.Action("Create","Establishments")" class="btn btn-default"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> Add New Establishment </a>
        </div>
    </div>
</div>

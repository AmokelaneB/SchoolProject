@model GradStockUp.Models.Qualification
@{
    ViewBag.Title = "CreateQualificationQualificationType";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>Qualification <span class="spans"> Type Add-On</span></h2>
<hr />
<form action="/Qualifications/CreateQualificationQualificationType" method="post">
    <div>
        @Html.LabelFor(model => model.QualificationName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("QualificationID", null, htmlAttributes: new { @class = "form-control" })

    </div>
    <div style="padding-top:1rem">
        @Html.LabelFor(model => model.QualificationTypes, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var qualificationTypes in ViewBag.QualificationTypes)
        {
            <ul class="col-md-offset-2">

                <li> <input type="checkbox" name="QualificationTypeIDs" value="@qualificationTypes.QualificationTypeID" />@qualificationTypes.QualificationType1</li>

            </ul>
        }
    </div>
    <br />
    <hr />
    <input type="submit" value="Add-On to Qualification Type" />
</form>
<div style="padding: 2rem">
    <div class="row">
        <div class="col-sm-4">
            <a href=" @Url.Action("Index","Qualifications")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Qualifications </a>
        </div>
        <div class="col-md-4">
            <a href=" @Url.Action("Create","QualificationTypes")" class="btn btn-default"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> Add New Qualification Type </a>
        </div>
    </div>
</div>



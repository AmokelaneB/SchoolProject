@model GradStockUp.Models.Establishment
@{
    ViewBag.Title = "CreateInstitutionEstablishment";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}
<h2>Establishment <span class="spans">Institution Add-On</span>  </h2>

<hr />
<form action="/Establishments/CreateInstitutionEstablishment" method="post">
    <div>
        @Html.LabelFor(model => model.EstaName, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("EstablishmentID", null, htmlAttributes: new { @class = "form-control" })

    </div>
    <div style="padding-top:2rem">
        @Html.LabelFor(model => model.Institutions, htmlAttributes: new { @class = "control-label col-md-2" })

        @foreach (var institution in ViewBag.Institutions)

        {
            <ul class="col-md-offset-2">
                <span class="col-sm-4">
                    <ul>
                        <li class="table-striped">
                            <input type="checkbox" name="InstitutionIDs" value="@institution.InstitutionID" />@institution.InstitutionName
                        </li>
                    </ul>

                </span>
            </ul>
        }
    </div>
    <hr />

    <div class="col-md-offset-1" style="padding-top: 16rem"> <input type="submit" value="Add-On Institution" /></div>
</form>
<div style="padding-top:2rem">
    <div class="row">
        <div class="col-sm-4">
            <a href=" @Url.Action("Index","Establishments")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Establishmens </a>
        </div>
        <div class="col-md-4">
            <a href=" @Url.Action("Create","Institutions")" class="btn btn-default"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> Add New Institution </a>
        </div>
    </div>
</div>


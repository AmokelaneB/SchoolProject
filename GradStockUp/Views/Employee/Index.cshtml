@model IEnumerable<GradStockUp.Models.Employee>

@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align:center; color:goldenrod">Registered Employees</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.EmployeeType.DESCRIPTION)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeType.DESCRIPTION)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmplyID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmplyID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmplyID })
            </td>
        </tr>
    }

</table>

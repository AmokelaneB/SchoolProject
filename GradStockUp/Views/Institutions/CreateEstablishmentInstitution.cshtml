@model GradStockUp.Models.Institution
@{
    ViewBag.Title = "CreateEstablishmentInstitution";
}
@{
    Layout = "~/Views/Shared/Cruds_Layout.cshtml";
}

<h2> New<span class="spans"> Institution</span>  </h2>

<hr />
<form action="/Institutions/CreateEstablishmentInstitution" method="post">
    <div class="form-group">
        @Html.LabelFor(model => model.InstitutionName, htmlAttributes: new { @class = "control-label col-md-2" })
        <input name="InstitutionN" type="text" class="form-control" placeholder="Enter Institution Name" id="Institution" />

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })

        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", name = "Address" } })
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

    </div>
    <div style="padding-top:2rem">
        @Html.LabelFor(model => model.Establishments, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var establishment in ViewBag.Establishments)

        {
            <ul class="col-md-offset-2">
                <li class="table-striped">
                    <input type="checkbox" name="EstablishmentIDs" value="@establishment.EstablishmentID" />@establishment.EstaName
                </li>
            </ul>
        }
    </div>
    <hr />
    <div style="padding-top:1rem">
        @Html.LabelFor(model => model.Faculties, htmlAttributes: new { @class = "control-label col-md-2" })
        @foreach (var faculty in ViewBag.Faculties)
        {
            <ul class="col-md-offset-2">
                <li> <input type="checkbox" name="FacultyIDs" value="@faculty.FacultyID" />@faculty.Description</li>

            </ul>
        }
    </div>
    <hr />

    <div class="col-md-offset-1"> <input class="btn btn-default" type="submit" value="Add New Institution" /></div>
</form>
<div style="padding-top:2rem">
    <div class="row">
        <div class="col-sm-4">
            <a href=" @Url.Action("Index","Institutions")" class="btn btn-default"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Institutions </a>
        </div>
        <div class="col-md-4">
            <a href=" @Url.Action("CreateEstablishmentStockType","Establishments")" class="btn btn-default" ><i class="fa fa-chevron-circle-right" aria-hidden="true"></i> Add New Establishment </a>
        </div>
    </div>
</div>
